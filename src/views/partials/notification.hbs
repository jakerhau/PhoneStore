{{#each message}}
{{#if success}}
<div id="success"
    class="self-end fixed z-50 top-20 md:right-5 right-4 w-max px-2 py-3 bg-white rounded-lg transition-all duration-300 border border-l-4  border-common-success">
    <div class="flex flex-col gap-1.5 ">
        <span class="text-neutral-9" id="success-title">Thành công</span>
        <span class="text-neutral-7" id="success-content">{{success}}</span>
    </div>
</div>
{{/if}}
{{#if error}}

<div id="error"  
    class="self-end fixed z-50 top-20 md:right-5 right-4 w-max px-2 py-3 bg-white rounded-lg transition-all duration-300 border border-l-4 border-red-500">
    <div class="flex flex-col gap-1.5 ">
        <span class="text-neutral-9" id="error-title">Lỗi</span>
        <span class="text-neutral-7" id="error-content">{{error}}</span>
    </div>
</div>
{{/if}}
{{/each}}
<script src="/js/notification.js"></script>